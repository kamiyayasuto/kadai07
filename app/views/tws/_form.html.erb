     <%= form_for(@tw, url: choose_new_or_edit) do |f| %>
  <% if @tw.errors.any? %>
    <div id="tw.error_explanation">
      <h2><%= @tw.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @tw.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-10" style="padding: 3px;">
  <%= f.text_area :content , class: "form-control input-sm", rows: "4", placeholder: "1文字以上140以下でつぶやくことができます。"%>
    </div>
  </div>
  </div>
  <%= f.submit '送信',class: "btn btn-primary" %>
  <%= link_to "ツイート一覧画面にもどる", tws_path,class: "btn btn-warning" %>
<% end %>

